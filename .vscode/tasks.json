{
  "version": "2.0.0",
  "tasks": [
    {
      "type": "shell",
      "command": "yarn",
      "args": ["tsc", "--noEmit", "--watch"],
      "options": {
        "cwd": "${workspaceFolder}/frontend"
      },
      "group": {
        "kind": "build",
        "isDefault": true
      },
      "problemMatcher": ["$tsc-watch"],
      "runOptions": {
        "runOn": "folderOpen"
      },
      "label": "TypeScript Watch"
    }
  ]
}