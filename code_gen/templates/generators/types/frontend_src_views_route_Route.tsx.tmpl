  {{- if .HasDynamicFacets}}
  const [_configRefreshCount, setConfigRefreshCount] = useState(0);

  {{- end}}
  const facetsFromConfig: DataFacetConfig[] = useMemo(
    () => buildFacetConfigs(viewConfig),
    [viewConfig],
  );

