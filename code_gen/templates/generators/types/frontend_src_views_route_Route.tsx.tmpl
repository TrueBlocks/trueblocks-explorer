        onRemove={(rowData) => handleRemove(String(rowData.address || ''))}
        {{- end}}
        {{- if .HasAutoname}}
        onAutoname={(rowData) => handleAutoname(String(rowData.address || ''))}
        {{- end}}
        {{- if .HasUpdate}}
        onSubmit={handleUpdate}
        {{- end}}
        {{- if .HasRowActions}}
        onSubmit={handleRowAction}
